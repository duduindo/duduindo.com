
body
  font-family 'sans-serif'

// --------------------------------------------
// Layout
// --------------------------------------------
.l-container
  display grid
  grid-template-columns 7fr 3fr
  //grid-template-rows 100px auto

  > *
    margin-bottom 1px

.l-masthead, .l-main, .l-aside
  grid-column 1 / 3

.l-masthead
  background-color #2c2c2c

.l-main
  grid-row 3
  padding 10px

  @media (min-width: 50em)
    grid-column 1
    grid-row 2

.l-aside
  grid-row 2

  @media (min-width: 50em)
    grid-column 2
    grid-row 2


