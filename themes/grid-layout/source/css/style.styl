
@import '_variables'

*
  box-sizing border-box

body
  background-color #f1f1f1
  font-family 'Arial'
  margin 0
  scroll-behavior smooth

img
  max-width 100%

a
  text-decoration none
  color #2c2c2c

// --------------------------------------------
// Layout
// --------------------------------------------
.l-container
  display grid
  grid-template-columns 7fr 3fr
  grid-gap 10px

.l-masthead, .l-main, .l-aside
  grid-column 1 / 3

.l-main
  grid-row 3

  @media (min-width: 50em)
    grid-column 1
    grid-row 2

.l-aside
  grid-row 2

  @media (min-width: 50em)
    grid-column 2
    grid-row 2


// --------------------------------------------
// Components
// --------------------------------------------

//
// Article
//
.c-article
  background-color white
  padding 20px

  & + &
    margin-top 20px

//
// Masthead
//
.l-masthead
  background-color #2c2c2c
  padding-left 15px
  padding-right 15px

  nav
    align-items center
    display flex
    justify-content space-between

// Logo
//
.c-logo
  a
    color #fff

// Form
//
.c-input
  min-height 35px



