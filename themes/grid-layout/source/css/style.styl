
@import '_variables'

*
  box-sizing border-box

body
  background-color #f1f1f1
  font-family 'Arial'
  line-height 1.9
  margin 0
  scroll-behavior smooth

img
  max-width 100%

a
  color #CC2100

  &:visited
    color #8a0000

for num in (1..6)
  h{num}
    a
      text-decoration none
      color #2c2c2c

      &:visited
        color #2c2c2c

// --------------------------------------------
// Layout
// --------------------------------------------
.l-container
  display grid
  grid-template-columns 1fr 7fr 2fr
  grid-gap 20px 10px

.l-masthead, .l-main, .l-aside
  grid-column 1 / 4

.l-main
  grid-row 3

  @media (min-width: 60em)
    grid-column 1 / 3
    grid-row 2

  @media (min-width: 80em)
    grid-column 2

.l-aside
  grid-row 2

  @media (min-width: 60em)
    grid-column 3
    grid-row 2


// --------------------------------------------
// Components
// --------------------------------------------

//  hidden
//
.is-hidden
  display none

.is-hidden-xs
  @media (max-width: 59em)
    display none

.is-hidden-sm
  @media (min-width: 60em) and (max-width: 80em)
    display none

.is-hidden-md
  @media (min-width: 80em)
    display none


// Article
//
.c-article
  background-color white
  padding 20px

  & + &
    margin-top 20px

  &__header
    h1
      font-size 1.4em
      margin-bottom 0

      @media (min-width: 60em)
        font-size 1.9em

    h5
      margin 0 0 5px 0

  &__categories,
  &__tags
    ul
      font-size .9em
      margin 0
      padding 0

      li
        background-color #f1f1f1
        display inline-block
        margin 5px 5px
        padding 0 5px

        &:first-child
          margin-left 0

      a
        text-decoration none
        color black


// Masthead
//
.l-masthead
  background-color #2c2c2c
  padding-left 15px
  padding-right 15px

  nav
    align-items center
    display flex
    justify-content space-between

// Logo
//
.c-logo
  a
    color #fff

    &:visited
      color #fff

// Form
//
.c-input
  min-height 35px

//
// About me
.c-aside
  font-size smaller
  padding 0 20px 0 10px

  @media (min-width: 60em) and (max-width: 80em)
    padding 0 5px 0 2px

  a
    text-decoration none

  svg
    vertical-align middle

  &__figure
    margin 0

    img
      display block
      margin 0 auto

    figcaption
      padding 10px 0
      text-align center

      @media (min-width: 60em)
        text-align left

  &__subtitle
    border-bottom 1px dotted #545454
    font-size 1.08em
    font-weight normal
    margin 1em 0

  &__list
  &__list-list
    padding 0 10px
    list-style-type none

    li
      padding 5px 0

    svg
      margin-right 5px


@import '_partial/highlight'
